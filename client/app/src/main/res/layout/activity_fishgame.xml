        app:srcCompat="@null"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/trashButton3"
        android:layout_width="64dp"
        android:layout_height="140dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="196dp"
        android:alpha="1.0"
        android:background="@drawable/jar"
        android:contentDescription="TODO"
        android:onClick="trashButton3_onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullscreen_content"
        app:srcCompat="@null"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/trashButton1"
        android:layout_width="64dp"
        android:layout_height="140dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="72dp"
        android:alpha="1.0"
        android:background="@drawable/glassbottle"
        android:contentDescription="TODO"
        android:onClick="trashButton1_onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullscreen_content"
        app:srcCompat="@null"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fullscreen_content_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullscreen_content"
        tools:ignore="UselessParent" />


</androidx.constraintlayout.widget.ConstraintLayout>