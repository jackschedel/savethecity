<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fish_game_bckgrd"
    android:theme="@style/ThemeOverlay.Savethecity.FullscreenContainer"
    tools:context=".FishgameActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


    <ImageView
        android:id="@+id/riverImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fish_game_river1" />

    <ImageView
        android:id="@+id/riverImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fish_game_river2" />

    <ImageButton
        android:id="@+id/trashButton2"
        android:layout_width="64dp"
        android:layout_height="140dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="108dp"
        android:alpha="1.0"
        android:background="@drawable/bottle"
        android:contentDescription="TODO"
        android:onClick="trashButton2_onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullscreen_content"
        app:srcCompat="@null"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/fishButton1"
        android:layout_width="154dp"
        android:layout_height="103dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="172dp"
        android:alpha="1.0"
        android:background="@drawable/fish_game_orange"
        android:contentDescription="TODO"
        android:onClick="fishButton1_onClick"
        android:rotation="-25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullscreen_content"
        app:srcCompat="@null"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/fishButton2"
        android:layout_width="151dp"
        android:layout_height="114dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="172dp"
        android:alpha="1.0"
        android:background="@drawable/fish_game_pink"
        android:contentDescription="TODO"
        android:onClick="fishButton2_onClick"
